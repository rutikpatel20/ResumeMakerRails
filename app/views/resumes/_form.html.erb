<!-- Add New Resume -->
<div class="container form-container">
  <div class="flex-column">
    <!-- Form Started Here -->
    <%= form_for @resume do |resu| %>
      <div class="form-group row">
        <div class="form-group col-md-7">
          <%= resu.label :name, "Name :", class:"mt-3" %>
          <%= resu.text_field :name ,placeholder: "Enter Your Name",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-5">
          <%= resu.label :current_role, "Current Role :", class:"mt-3" %>
          <%= resu.text_field :current_role ,placeholder: "Enter Your Current Role", class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <%= resu.label :profile_pic, "Profile Pic :" %>
      <%= resu.file_field :profile_pic ,placeholder: "Enter Your Pic", class:"mb-2 form-control" %>
      <br>
      <!-- ADDRESS -->
      <div class="form-group row">
        <div class="form-group col-md-4">
          <%= resu.label :address_line_1, "Address Line 1 :" %>
          <%= resu.text_field :address_line_1 ,placeholder: "House No., Street",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= resu.label :address_line_2, "Address Line 2 :" %>
          <%= resu.text_field :address_line_2,placeholder: "Area, Landmark, City",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= resu.label :address_line_3, "Address Line 3 :" %>
          <%= resu.text_field :address_line_3,placeholder: "Pincode, State",class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <%= resu.label :email, "Email :" %>
      <%= resu.text_field :email ,placeholder: "Enter Your email",class:"mb-2 form-control" %>
      <br>
      <!-- SOCIAL PROFILE -->
      <div class="form-group row">
        <div class="form-group col-md-4">
          <%= resu.label :social_media_1, "Twitter Username :" %>
          <%= resu.text_field :social_media_1 ,placeholder: "Enter Twitter Username",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= resu.label :social_media_2, "Github Username :" %>
          <%= resu.text_field :social_media_2 ,placeholder: "Enter Github username",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= resu.label :social_media_3, "Linkedin Username :" %>
          <%= resu.text_field :social_media_3 ,placeholder: "Enter Linkedin Username",class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <!-- EXPERTISE -->
      <div class="form-group row">
        <div class="form-group col-md-3">
          <%= resu.label :expertise_1, "Expertise 1 :" %>
          <%= resu.text_field :expertise_1 ,placeholder: "Enter Your Expertise #1",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-3">
          <%= resu.label :expertise_2, "Expertise 2 :" %>
          <%= resu.text_field :expertise_2 ,placeholder: "Enter Your Expertise #2",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-3">
          <%= resu.label :expertise_3, "Expertise 3 :" %>
          <%= resu.text_field :expertise_3 ,placeholder: "Enter Your Expertise #3",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-3">
          <%= resu.label :expertise_4, "Expertise 4 :" %>
          <%= resu.text_field :expertise_1 ,placeholder: "Enter Your Expertise #4",class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <!-- EDUCATION -->
      <div class="form-group row">
        <div class="form-group col-md-6">
          <%= resu.label :degree_1, "Degree 1 :" %>
          <%= resu.text_field :degree_1 ,placeholder: "Enter Your Degree #1",class:"mb-2 form-control" %>
          <br>
          <%= resu.label :college_1, "College 1 :" %>
          <%= resu.text_field :college_1 ,placeholder: "Enter Your College Name",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-6">
          <%= resu.label :degree_2, "Degree 2 :" %>
          <%= resu.text_field :degree_2 ,placeholder: "Enter Your Degree #2",class:"mb-2 form-control" %>
          <br>
          <%= resu.label :college_2, "College 2 :" %>
          <%= resu.text_field :college_2 ,placeholder: "Enter Your College Name",class:"mb-2 form-control" %>
          <br>
        </div>
        <!-- HOBBIES -->
        <div class="form-group row">
          <div class="form-group col-md-4">
            <%= resu.label :hobby_1, "Hobby 1 :" %>
            <%= resu.text_field :hobby_1 ,placeholder: "Enter Your Hooby #1",class:"mb-2 form-control" %>
            <br>
          </div>
          <div class="form-group col-md-4">
            <%= resu.label :hobby_2, "Hobby 2 :" %>
            <%= resu.text_field :hobby_2 ,placeholder: "Enter Your Hooby #2",class:"mb-2 form-control" %>
            <br>
          </div>
          <div class="form-group col-md-4">
            <%= resu.label :hobby_3, "Hobby 3 :" %>
            <%= resu.text_field :hobby_3 ,placeholder: "Enter Your Hooby #3",class:"mb-2 form-control" %>
            <br>
          </div>
        </div>
        <!-- PROFILE SUMMARY -->
        <%= resu.label :profile_summary, "Profile Summary :" %>
        <%= resu.text_area :profile_summary ,placeholder: "Enter Your Profile Summary",class:"mb-2 form-control",  rows: 5  %>
        <br>
        <!-- EXPERIENCE -->
        <!-- JOB #1 -->
        <div class="form-group row mt-3">
          <div class="form-group col-md-4">
            <%= resu.label :pr_job_title_1, "Job Title 1 :" %>
            <%= resu.text_field :pr_job_title_1 ,placeholder: "Enter Your #1 Job Title",class:"mb-2 form-control" %>
            <br>
            <%= resu.label :pr_job_role_1, "Job Role 1 :" %>
            <%= resu.text_field :pr_job_role_1 ,placeholder: "Enter Your #1 Job Role",class:"mb-2 form-control" %>
            <br>
            <%= resu.label :pr_job_description_1, "Job Description 1 :" %>
            <%= resu.text_area :pr_job_description_1 ,placeholder: "Enter Your #1 Job Description",class:"mb-2 form-control",  rows: 5 %>
            <br>
          </div>
          <!-- JOB #2 -->
          <div class="form-group col-md-4">
            <%= resu.label :pr_job_title_2, "Job Title 2 :" %>
            <%= resu.text_field :pr_job_title_2 ,placeholder: "Enter Your #2 Job Title",class:"mb-2 form-control" %>
            <br>
            <%= resu.label :pr_job_role_2, "Job Role 2 :" %>
            <%= resu.text_field :pr_job_role_2 ,placeholder: "Enter Your #2 Job Role",class:"mb-2 form-control" %>
            <br>
            <%= resu.label :pr_job_description_2, "Job Description 2 :" %>
            <%= resu.text_area :pr_job_description_2 ,placeholder: "Enter Your #2 Job Description",class:"mb-2 form-control", rows: 5 %>
            <br>
          </div>
          <!-- JOB #3 -->
          <div class="form-group col-md-4">
            <%= resu.label :pr_job_title_3, "Job Title 3 :" %>
            <%= resu.text_field :pr_job_title_3 ,placeholder: "Enter Your #3 Job Title",class:"mb-2 form-control" %>
            <br>
            <%= resu.label :pr_job_role_3, "Job Role 3 :" %>
            <%= resu.text_field :pr_job_role_3 ,placeholder: "Enter Your #3 Job Role",class:"mb-2 form-control" %>
            <br>
            <%= resu.label :pr_job_description_3, "Job Description 3 :" %>
            <%= resu.text_area :pr_job_description_3 ,placeholder: "Enter Your #3 Job Description",class:"mb-2 form-control", rows: 5 %>
            <br>
          </div>
        </div>
        <div class="form-group row">
          <div class="form-group col-md-4">
            <%= resu.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
